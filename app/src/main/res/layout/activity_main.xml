<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/brightNessIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-5dp"
        android:contentDescription="@string/torch"
        android:scaleType="centerCrop"
        android:src="@drawable/flashlight_brightness"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/torchIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/torchIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/torch"
        android:src="@drawable/ic_flashlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>